<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="EartagWindow" parent="AdwApplicationWindow">
    <property name="default-width">400</property>
    <property name="default-height">700</property>
    <child>
      <object class="GtkBox" id="container">
        <property name="orientation">vertical</property>
        <property name="hexpand">true</property>

        <child>
          <object class="AdwHeaderBar" id="headerbar">
            <child type="start">
              <object class="GtkButton" id="save_button">
                <property name="visible">false</property>
                <property name="sensitive">false</property>
                <property name="label" translatable="yes">Save</property>
                <signal name="clicked" handler="on_save"/>

                <style>
                  <class name="suggested-action"/>
                </style>
              </object>
            </child>

            <child type="title">
              <object class="AdwWindowTitle" id="window_title">
                <property name="title">Eartag</property>
              </object>
            </child>

            <child type="end">
              <object class="GtkMenuButton">
                <property name="icon-name">open-menu-symbolic</property>
                <property name="menu-model">primary_menu</property>
              </object>
            </child>

            <style>
              <class name="flat"/>
            </style>
          </object>
        </child>

        <child>
          <object class="AdwClamp">
            <child>
              <object class="GtkScrolledWindow" id="content_scroll">
                <property name="hscrollbar-policy">never</property>
                <property name="hexpand">true</property>
                <property name="vexpand">true</property>

                <child>
                  <object class="GtkStack" id="content_stack">
                    <property name="visible-child">no_file</property>
                    <property name="transition-type">crossfade</property>

                    <child>
                      <object class="EartagNoFile" id="no_file"/>
                    </child>

                    <child>
                      <object class="EartagFileView" id="file_view"/>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>

  <object class="GtkFileFilter" id="audio_file_filter">
    <mime-types>
      <mime-type>audio/*</mime-type>
    </mime-types>
  </object>

  <menu id="primary_menu">
    <section>
      <item>
        <attribute name="label" translatable="yes">_Open file</attribute>
        <attribute name="action">app.open_file</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">_About Eartag</attribute>
        <attribute name="action">app.about</attribute>
      </item>
    </section>
  </menu>
</interface>
